<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hoo.hktranseta.common.activity.MainTabbedActivity$PlaceholderFragment">

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="1dip"
        app:fastScrollPopupTextSize="40sp"
        app:fastScrollPopupBackgroundSize="60dp"
        app:fastScrollPopupBgColor="?colorAccent"
        app:fastScrollPopupTextColor="@color/colorMenuWhite"
        app:fastScrollThumbColor="?colorAccent" />

</android.support.v4.widget.SwipeRefreshLayout>